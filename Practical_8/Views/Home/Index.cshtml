@model List<Practical_8.Models.Anime>
@{
    ViewBag.Title = "Home Page";
}

<main>

    <div class="row">
        @foreach (var anime in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@anime.Image.Original" alt="@anime.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <a href="@Url.Action("Details", "Anime", new { id = anime.Id })">
                            <h5 class="card-title">@anime.Name</h5>
                        </a>
                        <p class="card-text">
                            <span class="badge bg-secondary">@anime.Kind</span>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Episodes: @anime.Episodes</small>
                            <div class="d-flex align-items-center">
                                <img src="@Url.Content("~/Content/star.svg")" alt="star" width="20" height="20" />
                                <small class="text-muted ms-2">@anime.Score</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</main>